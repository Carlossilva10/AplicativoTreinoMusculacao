<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mediumBlue"
    tools:context=".view.Cadastro">

    <EditText
        android:id="@+id/editCadastro"
        android:layout_width="203dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Cadastro"
        android:textColor="@color/goldenrod"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="104dp" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/white"
        android:hint="Nome"
        android:maxLines="1"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editCadastro"
        app:layout_constraintStart_toStartOf="@+id/editCadastro"
        tools:layout_editor_absoluteY="163dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/white"
        android:hint="E-mail"
        android:maxLines="1"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editNome"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editNome"
        tools:layout_editor_absoluteY="270dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/white"
        android:hint="Senha"
        android:maxLines="1"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editEmail"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editEmail"
        tools:layout_editor_absoluteY="413dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btIniciar"
        android:layout_width="177dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/mediumBlue"
        android:text="Salvar"
        android:textColor="@color/goldenrod"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editSenha"
        app:layout_constraintStart_toStartOf="@+id/editSenha"
        tools:layout_editor_absoluteY="525dp" />

    <Button
        android:id="@+id/btVoltar"
        android:layout_width="177dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/mediumBlue"
        android:text="Voltar"
        android:textColor="@color/goldenrod"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editSenha"
        app:layout_constraintStart_toStartOf="@+id/editSenha"
        app:layout_constraintTop_toBottomOf="@+id/btIniciar" />


</androidx.constraintlayout.widget.ConstraintLayout>